
<div class="content-heading">
  <div> Apertura y Cierre de Caja </div>

  <div class="ml-auto">
      <%= link_to 'APERTURA DE CAJA', new_open_close_cash_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-striped table-hover w-100" >
  <thead>
    <tr>
      <th><strong>CAJERO</strong></th>
      <th><strong>FECHA DE INICIO</strong></th>
      <th><strong>ESTADO</strong></th>
      <th><strong>OPCION</strong></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_close_cashes.each do |open_close_cash| %>
      <tr>
        <td><%= open_close_cash.employee.person.name %></td>
        <td><%= open_close_cash.date_start.strftime("%d/%m/%Y %H:%M") %></td>
        <% if open_close_cash.state == true %>
          <td class>
            <div class="badge badge-success">
              Abierto
            </div>
          </td>
        <%else %>
          <td>
            <div class="badge badge-danger">
              Cerrado
            </div>
          </td>
        <%end %>
        <% if open_close_cash.state === true %>
          <td><%= link_to 'Cerrar', edit_open_close_cash_path(open_close_cash) %></td>
          <% else%>
        <td></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


