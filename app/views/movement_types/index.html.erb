<div class="content-heading">

  Tipos de Movimiento

  <div class="ml-auto">
    <%= link_to new_movement_type_path do %>
      <button class="btn btn-secondary">
        <i class="fas fa-plus text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th class="text-center">
      <strong>Descripción</strong>
    </th>
    <th class="text-center">
      <strong>Acción</strong>
    </th>
    <th>
      <strong></strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @movement_types.each do |movement_type| %>
    <tr>
      <td class="text-center"><%= movement_type.description %></td>
      <td class="text-center"><%= movement_type.action %></td>

      <td class="text-right">
        <div class="btn-group" role="group">
          <%= link_to movement_type do %>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <% end %>
          <%= link_to edit_movement_type_path(movement_type) do %>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <% end %>
          <%= link_to movement_type, method: :delete, data: {confirm: '¿Estás seguro?'},
                      :remote => true, :class => 'delete_movement_type' do %>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
