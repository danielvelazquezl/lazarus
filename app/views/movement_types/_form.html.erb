<%= form_with(model: movement_type, local: true) do |form| %>
  <% if movement_type.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(movement_type.errors.count, "error") %> 
      <% if movement_type.errors.count > 1 %>
        impidieron que este tipo de movimiento sea guardado:
      <% else %>
        impidi√≥ que este movimiento sea guardado:
      <% end %>
      </h2>
      <ul>
      <% movement_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card card-default">
      <div class="tab-content">
        <div class="tab-pane active" id="edit" role="tabpanel">
            <div class="form-group row">
              <label class="col-lg-2 col-form-label">Descripcion:</label>
              <div class="col-lg-8">
                <%#= <input class="form-control" type="text" placeholder="Product name.." />%>
                <%= form.text_field :description , class: 'form-control'%>
              </div>
            </div>


            <div class="form-group row">
              <label class="col-lg-2 col-form-label">Accion:</label>
              <div class="col-lg-2">
                <%#= <input class="form-control" type="text" placeholder="$ 123.20" />%>
                <%= form.text_field :action, class: 'form-control' %>
              </div>
            </div>

        </div>
      </div>
    </div>

  <div class="row">
    <div class="col"></div>
    <div class="col-12 col-xl-auto">
          <%= form.submit 'Guardar', class: "btn btn-success" %>
    </div>
  </div>

<% end %>
