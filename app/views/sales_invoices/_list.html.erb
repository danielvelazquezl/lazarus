<div class="card card-body bg-light d-block p-3 my-3">
  <div class="row">
    <div class="col-md-10">
      <div>
        <%= page_entries_info sales_invoices, :model => 'sales_invoice', :class => 'align-middle' %>
      </div>
    </div>
    <div class="col-md-2">
      <div>
        <%= link_to "Limpiar filtros", reset_filterrific_url, :class => 'btn btn-secondary align-middle' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th class="text-center">
      <strong>NÂ° FACTURA</strong>
    </th>
    <th class="text-center">
      <strong>CLIENTE</strong>
    </th>
    <th class="text-center">
      <strong>FECHA</strong>
    </th>
    <th class="text-center">
      <strong>TOTAL</strong>
    </th>
    <th class="text-center">
      <strong>ACCION</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% sales_invoices.each do |sales| %>
    <tr>
      <td class="text-center"><%= sales.invoice_number %></td>
      <td class="text-center"><%= sales.client.person.name %></td>
      <td class="text-center"><%= l(sales.date.to_date, format: :long) %></td>
      <td class="text-center"><%= sales.total %></td>
      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to edit_sales_invoice_path(sales) do %>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate sales_invoices, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>