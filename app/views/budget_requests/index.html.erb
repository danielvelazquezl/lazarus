<p id="notice"><%= notice %></p>
<div class="content-heading">
  <div> Pedido de Cotización </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th>
      <strong>FECHA</strong>
    </th>
    <th>
      <strong>PROVEEDOR</strong>
    </th>
    <th>
      <strong>RESPONSABLE</strong>
    </th>
    <th>
      <strong>ESTADO</strong>
    </th>
    <th>
      <strong>OBSERVACIÓN</strong>
    </th>
    <th>
      <strong>OPCIONES</strong>
    </th>

  </tr>
  </thead>
  <tbody>
  <% @budget_requests.each do |budget_request| %>
    <tr>
      <td><%= budget_request.date.strftime("%d-%m-%Y") %></td>
      <td><%= budget_request.provider.person.name%></td>
      <td><%= budget_request.employee.person.name %></td>
      <% if budget_request.state == :finished %>
        <td>
          <div class="badge badge-success">
            <%=budget_request.state.text%>
          </div>
        </td>
      <%else %>
        <td>
          <div class="badge badge-danger">
            <%=budget_request.state.text%>
          </div>
        </td>
      <%end %>
      <td><%= budget_request.comment %></td>
      <td class="text-center">
        <div class="btn-group" role="group">
          <!--<%= link_to budget_request do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <%end %>-->
          <%= link_to edit_budget_request_path(budget_request) do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <%end %>
          <!--<%= link_to budget_request, method: :delete, data: { confirm: '¿Estás seguro?' },
                      :remote => true, :class => 'delete_form' do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
          <%end %>-->
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>