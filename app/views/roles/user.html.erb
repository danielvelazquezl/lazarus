

<div class="content-heading">Usuarios</div>

<table class="table table-striped table-hover w-100" >
  <thead>
  <tr>
    <th style="width:80px;">
      <strong>USUARIO</strong>
    </th>
    <th>
      <strong>EMAIL</strong>
    </th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.user_name %></td>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>


<div class="card card-default">

  <div class="card-body">
    <table class="table table-striped table-hover w-100">
      <thead class="thead-light">
      <th style="width:80px;">
        <strong>Role</strong>
      </th>
      <th colspan="2"></th>
      </thead>


        <tbody>

        <%@roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td class="text-center">
            <div class="btn-group" role="group">
            </div>
          </td>
          <td style="width:15px">
            <%= link_to edit_role_path(role) do%>
              <i class="fas fa-edit text-success"></i>
            <%end %>
          </td>
        <%end%>
        </tr>

          </tbody>

        </table>
  </div>

</div>


<%= form_tag(user_roles_path, method: :get, remote: true, locol: true) do %>
  <div>
    <p class="d-flex">
        <span id="mydiv">

          <%= select_tag :role_id, options_from_collection_for_select( Role.where.not(id: UsersRole.where(user_id: @user.id).select("role_id")), "id", "name"), id: "select_t" %>
          <%= hidden_field_tag :id,  @role.id %>

        </span>
      <span style="margin-left: 10px">
          <%= submit_tag "Agregar", id:'search-invoices', name:'nil', class: "btn btn-primary" %>
        </span>
    </p>
  </div>
<% end %>
<script>
    $(document).ready(function () {
        $('#select_t').selectize({
            create: false,
            sortField: 'text'
        });
        $(document).ready(function () {
            let w = $('#mydiv').width()+100+'px';
            $('#mydiv').css('width',w);
        })
    });

</script>



