

<div class="content-heading">
  <div> Roles </div>

  <div class="ml-auto">
    <%= link_to new_role_path do %>
      <button class="btn btn-secondary" title="Crear Orden">
        <i class="fas fa-plus text-primary fa-1x" ></i>
      </button>
    <% end %>
  </div>
</div>

<div class="card card-default">
  <div class="card-body">
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <table class="table table-striped table-hover w-100" id="datatable2">
          <thead>
          <tr>
            <th class="col">
              <strong>DESCRIPCIÓN</strong>
            </th>
            <th class="col-2">
              <strong>OPCIONES</strong>
            </th>

          </tr>
          </thead>
          <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to edit_role_path(role) do%>
                    <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
                  <%end %>
                </div>
              </td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to role, method: :delete, data: { confirm: '¿Estás seguro?' } do %>
                    <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
                  <% end %>
                </div>
              </td>
            </tr>
          <%end%>
          </tbody>
        </table>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
