<p id="notice"><%= notice %></p>

<div class="content-heading">
  <div> Roles </div>

  <div class="ml-auto">
    <%= link_to new_role_path do %>
      <button class="btn btn-secondary" title="Crear Orden">
        <i class="fas fa-plus text-primary fa-1x" ></i>
      </button>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  </thead>
  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td class="text-center">
        <div class="btn-group" role="group">
        </div>
      <td style="width:15px">
        <%= link_to edit_role_path(role) do%>
          <i class="fas fa-edit text-success"></i>
        <%end %>
      </td>
      <td style="width:15px">
        <%= link_to role, method: :delete, data: { confirm: '¿Estás seguro?' } do%>
          <i class="fas fa-trash-alt text-danger"></i>
        <%end %></td>
    </tr>
  <%end%>
  </tbody>
</table>
