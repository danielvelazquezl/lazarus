<%= form_with model: @role, local: true do |form| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@role.errors.count, "error") %> 
      <% if @role.errors.count > 1 %>
        impidieron que este rol sea guardado:
      <% else %>
        impidi√≥ que este rol sea guardado:
      <% end %>
      </h2>

      <ul>
        <% @role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card card-default">
    <div class="card-body">
      <p class="lead bb">ROL</p>
      <div class="form-group row">
        <div class="col-1"></div>
        <div class="col">
          <strong>Descripcion:</strong><%= form.text_field :name%>
        </div>
      </div>

    </div>
  </div>
  <div class="row">
    <div class="col"></div>
    <div class="col-12 col-xl-auto">
      <%= form.submit 'Guardar', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

