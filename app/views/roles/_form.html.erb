<%= form_with model: @role, local: true do |form| %>

  <div class="card card-default">
    <div class="card-body">
      <p class="lead bb">ROL</p>
      <div class="form-group row">
        <div class="col-1"></div>
        <div class="col">
          <strong>Descripcion:</strong><%= form.text_field :name%>
        </div>
      </div>

    </div>
  </div>
  <div class="row">
    <div class="col"></div>
    <div class="col-12 col-xl-auto">
      <%= form.submit 'Guardar', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

