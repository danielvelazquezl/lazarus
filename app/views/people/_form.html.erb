<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %>prohibited this person from being saved:</h2>
      <ul>
        <% person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card card-default">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-2">
          <strong>Nombre y Apellido:</strong>
        </div>
        <div class="col-4">
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="col-2">
          <strong>E-mail</strong>
        </div>
        <div class="col-4">
          <%= form.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2">
          <strong>R.U.C.</strong>
        </div>
        <div class="col-4">
          <%= form.fields_for :clients, @clients do |f| %>
              <%= f.text_field :ruc, class: "form-control" %>
          <% end %>
        </div>
        <div class="col-2">
          <strong>Telefono</strong>
        </div>
        <div class="col-4">
          <%= form.text_field :phone, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2">
          <strong>Direcci√≥n</strong>
        </div>
        <div class="col-4">
          <%= form.text_field :address, class: "form-control" %>
        </div>
      </div>
      <fieldset>
        <div class="form-group row">
          <div class="col-md-4">
            <%= link_to clients_people_path do %>
              <button class="btn btn-secondary" type="button">Volver</button>
            <% end %>
            <%= form.submit 'Guardar nuevo cliente', class: "btn btn-primary" %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>