<p id="notice"><%= notice %></p>
<div class="content-heading">
  <div> Nota de Pedido </div>

  <div class="ml-auto">
    <%= link_to new_order_ticket_path do %>
      <button class="btn btn-secondary">
        <i class="fas fa-plus text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th>
      <strong>Nº DE TICKET</strong>
    </th>
    <th>
      <strong>CLIENTE</strong>
    </th>
    <th>
      <strong>EMPLEADO</strong>
    </th>
    <th>
      <strong>MET. PAGO</strong>
    </th>
    <th>
      <strong>FECHA</strong>
    </th>
    <th>
      <strong>ESTADO</strong>
    </th>
    <th>
      <strong>OBSERVACIÓN</strong>
    </th>
    <th>
      <strong>OPCIONES</strong>
    </th>

  </tr>
  </thead>
  <tbody>
  <% @order_tickets.each do |order_ticket| %>
    <tr>
      <td><%= order_ticket.ticket_number %></td>
      <td><%= order_ticket.client.person.name %></td>
      <td><%= order_ticket.employee.person.name %></td>
      <td><%= order_ticket.pay_method.description %></td>
      <td><%= order_ticket.date.strftime("%d-%m-%Y") %></td>
      <td><%= order_ticket.state %></td>
      <td><%= order_ticket.observation %></td>
      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to order_ticket do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <%end %>
          <%= link_to edit_order_ticket_path(order_ticket) do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <%end %>
          <%= link_to order_ticket, method: :delete, data: { confirm: '¿Estás seguro?' },
                      :remote => true, :class => 'delete_form' do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
          <%end %>
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>

