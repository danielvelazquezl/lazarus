<%= form_with model: @deposit, local: true, html: { id: "deposit_form" } do |form| %>
  <% if @deposit.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@deposit.errors.count, "error") %> 
      <% if @deposit.errors.count > 1 %>
        impidieron que este depósito sea guardado:
      <% else %>
        impidió que este depósito sea guardado:
      <% end %>
      </h2>
      <ul>
      <% @deposit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script type="text/javascript" >
  <%= render "validate.js" %>
</script>
