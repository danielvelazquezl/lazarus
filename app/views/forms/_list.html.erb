<div class="card card-body bg-light d-block p-3 my-3">
  <div class="row">
    <div class="col-md-10">
      <div>
        <%= page_entries_info forms, :model => 'form', :class => 'align-middle' %>
      </div>
    </div>
    <div class="col-md-2">
      <div>
        <%= link_to "Limpiar filtros", reset_filterrific_url, :class => 'btn btn-secondary align-middle' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th class="text-center">
      <strong>N°</strong>
    </th>
    <th class="text-center">
      <strong>ENCARGADO</strong>
    </th>
    <th class="text-center">
      <strong>FECHA</strong>
    </th>
    <th class="text-center">
      <strong>DEP. ORIGEN</strong>
    </th>
    <th class="text-center">
      <strong>DEP. DESTINO</strong>
    </th>
    <th class="text-center">
      <strong>COMENTARIO</strong>
    </th>
    <th class="text-center">
      <strong>ACCIONES</strong>
    </th>

  </tr>
  </thead>
  <tbody>
  <% forms.each do |form| %>
    <tr>
      <td class="text-center"><%= form.number %></td>
      <td class="text-center"><%= form.person.name %></td>
      <td class="text-center"><%= l(form.date.to_datetime, format: :long) %></td>
      <td class="text-center"><%= form.origin.description %></td>
      <td class="text-center"><%= form.destination.description %></td>
      <td class="text-center"><%= form.comments %></td>
      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to form do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></button>
          <%end %>
          <!--<%= link_to edit_form_path(form) do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <%end %>-->
          <%= link_to form, method: :delete, data: { confirm: '¿Estás seguro?' },
                      :remote => true, :class => 'delete_form' do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
          <%end %>
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>

<%= will_paginate forms, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>