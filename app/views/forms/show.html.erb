<div class="content-heading">
  <%if @form.form_type == :cpuproduced then%>
    <div class="text-align-right" title="Volver atras">
      <%= link_to forms_path do%>
        <button class="btn btn-secondary">
          <i class="fas fa-arrow-left text-primary fa-1x"></i>
        </button>
      <%end %>
    </div>

    <div class="col-8"> Formulario CPU Producidas </div>
    <div class="text-align-right">
      <%= link_to form_url(@form, :format => :pdf) do%>
        <button class="btn btn-secondary">
          <i class="fas fa-print text-primary fa-1x"></i> Imprimir PDF
        </button>
      <%end %>
    </div>
  <%else %>
    <div class="text-align-right">
      <%= link_to request_forms_index_forms_path do%>
        <button class="btn btn-secondary">
          <i class="fas fa-arrow-left text-primary fa-1x"></i>
        </button>
      <%end %>
    </div>


    <div class="col-8"> Formulario de Solicitud de Componentes </div>
    <div class="text-align-right">
      <%= link_to form_url(@form, :format => :pdf) do%>
        <button class="btn btn-secondary">
          <i class="fas fa-print text-primary fa-1x"></i> Imprimir PDF
        </button>
      <%end %>
    </div>
  <%end %>
</div>

<div class="card card-default">
  <div class="card-body">
    <p class="d-flex lead bb">
      <span>FORMULARIO Nº <%= @form.number %></span>
      <!--span class="ml-auto"><%= @form.date.strftime("%d-%m-%Y") %></span-->
    </p>
    <form class="form-horizontal">
      <div class="form-group row">
        <div class="col-2">
          <strong>Encargado:</strong>
        </div>
        <div class="col-4">
          <%= @form.person.name %>
        </div>
        <div class="col-2">
          <strong>Fecha:</strong>
        </div>
        <div class="col-4">
          <%= @form.date.strftime("%d-%m-%Y %H:%M") %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2">
          <strong>Depósito de origen:</strong>
        </div>
        <div class="col-4">
          <%= @form.origin.description %>
        </div>
        <div class="col-2">
          <strong>Depósito de destino:</strong>
        </div>
        <div class="col-4">
          <%= @form.destination.description %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2">
          <strong>Comentario:</strong>
        </div>
        <div class="col">
          <%= @form.comments %>
        </div>
      </div>
    </form>
  </div>
</div>

  <div class="card">
    <div class="card-body">
      <p class="lead bb">DETALLES</p>
      <div class="row">
        <div class="col"></div>
        <div class="col-6">
          <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
            <tr>
              <th class="col-5">Producto Terminado</th>
              <th class="col-1">Cantidad</th>
            </tr>
            </thead>
            <tbody id="invoices-items-table">
              <% @form.form_items.each do |m| %>
                <tr>
                  <td><%= Product.find_by(id: m.product_id).description%></td>
                  <td><%= m.quantity %></td>
                </tr>
              <%end %>
            </tbody>
          </table>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>

