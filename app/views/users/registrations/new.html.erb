<body class="bg-gradient-primary">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row justify-content-center">
            <div class="col-lg-10">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Crea una cuenta</h1>
                </div>
                <!--<form class="user">-->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "new_user_form" }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group">
                    <%= f.text_field :user_name, autofocus: true, autocomplete: "name", class: "form-control form-control-user" , placeholder: "Nombre de usuario" %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-user" , placeholder: "Correo"%>
                  </div>
                  <div class="form-group">
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user" , placeholder: "Contraseña"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user" , placeholder: "Confirme contraseña"%>
                  </div>
                  <%= f.submit "Registrarse" , class: "btn btn-primary btn-user btn-block" %>
                  <hr>
                <% end %>
                <div class="text-center">
                  <a class="small">
                    <%= render "users/shared/links" %>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>

<script type="text/javascript" >
  <%= render "validate.js" %>
</script>
