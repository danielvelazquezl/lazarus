<p></p>
<div class="content-heading">
  <div class="col-8">Productos con stock mínimo</div>
  <div class="text-align-right">
    <%= link_to reports_min_stock_url(@products, :format => :pdf) do%>
      <button class="btn btn-secondary">
        <i class="fas fa-print text-primary fa-1x"></i> Imprimir PDF
      </button>
    <%end %>
  </div>
</div>

<table class="table table-striped table-hover " id="datatable2">
    <thead>
    <tr>
    <tr class="align-content-start">
      <th class="text-left">
        <strong>CÓDIGO</strong>
      </th>
      <th class="text-left">
        <strong>PRODUCTO</strong>
      </th>
      <th class="text-left">
        <strong>CANTIDAD MÍNIMA</strong>
      </th>
      <th class="text-left">
        <strong>EXISTENTE</strong>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.bar_code %></td>
        <td><%= product.description %></td>
        <td><%= Stock.find_by(product_id: product.id).min_stock %></td>
        <td><%= Stock.find_by(product_id: product.id).quantity %></td>
      </tr>
    <% end %>
    </tbody>
  </table>