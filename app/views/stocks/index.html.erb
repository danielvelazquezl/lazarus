<div class="content-heading">

  Stock

  <div class="ml-auto">
    <%= link_to new_stock_path do %>
      <button class="btn btn-secondary">
        <i class="fas fa-plus text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>

</div>

<div class="card card-footer">
  <div class="form-group row">
    <div class="col-1">
      Deposito:
    </div>
    <div class="col-4">
      <%= form_tag stocks_path, :method => "get" do %>
        <%= collection_select :stock, :deposit_id, Deposit.all, :id, :description, prompt: true %>
        <%= button_tag(type: "submit", class: "btn btn-secondary") do %>
          Filtrar <i class="icon-repeat"></i>
        <% end %>
      <% end %>
    </div>
    <div class="col-1">
      Producto:
    </div>
    <div class="col-4">
      <%= form_tag stocks_path, :method => "get" do %>
        <%= collection_select :stock, :product_id, Product.all, :id, :description, prompt: true %>
        <%= button_tag(type: "submit", class: "btn btn-secondary") do %>
          Filtrar <i class="icon-repeat"></i>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class= "form-group row">

</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th class="text-center">
      <strong>Producto</strong>
    </th>
    <th class="text-center">
      <strong>Deposito</strong>
    </th>
    <th class="text-center">
      <strong>Cantidad</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @stocks.each do |stock| %>
    <tr>
      <td class="text-center"><%= stock.product.description %></td>
      <td class="text-center"><%= stock.deposit.description %></td>
      <td class="text-center"><%= stock.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>
