<div class="card card-body bg-light d-block p-3 my-3">
  <div class="row">
    <div class="col-md-10">
      <div>
        <%= page_entries_info stocks, :model => 'stock', :class => 'align-middle' %>
      </div>
    </div>
    <div class="col-md-2">
      <div>
        <%= link_to "Limpiar filtros", reset_filterrific_url, :class => 'btn btn-secondary align-middle' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th class="text-center">
      <strong>PRODUCTO</strong>
    </th>
    <th class="text-center">
      <strong>DEPOSITO</strong>
    </th>
    <th class="text-center">
      <strong>CANTIDAD</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% stocks.each do |stock| %>
    <tr>
      <td class="text-center"><%= stock.product.description %></td>
      <td class="text-center"><%= stock.deposit.description %></td>
      <td class="text-center"><%= stock.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate stocks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>