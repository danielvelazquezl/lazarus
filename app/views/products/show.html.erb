<div class="content-heading">
  <div class="text-align-right">
    <%= link_to products_path do%>
      <button class="btn btn-secondary">
        <i class="fas fa-arrow-left text-primary fa-1x"></i>
      </button>
    <%end %>
  </div>
  
  <div class="col-8">
    Producto <%= @product.product_type.text %>
  </div>
 </div>

<div class="card card-default">
  <div class="card-body">
    <p class="lead bb"><%= @product.description %></p>
    <% if @product.image.attached? %>
      <td><%= image_tag(@product.image) %></td>
    <% end %>
      <form class="form-horizontal">
        <div class="form-group row">
          <div class="col-2">
            <strong>Código de barras:</strong>
          </div>
          <div class="col-4">
            <%= @product.bar_code %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <strong>Ubicación:</strong>
          </div>
          <div class="col-4">
            <%= @product.location %>
          </div>
        </div>
      </form>
    </div>
  </div>

<% if @product.product_type.product? %>
  <div class="card">
    <div class="card-body">
      <p class="lead bb">DETALLES</p>
      <div class="row">
        <div class="col"></div>
        <div class="col-6">
          <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
            <tr>
              <th class="col-5">Producto</th>
              <th class="col-1">Cantidad</th>
            </tr>
            </thead>
            <tbody id="invoices-items-table">
              <% @product.product_items.each do |m| %>
                <tr>
                  <td><%= Product.find_by(id: m.component_id).description %></td>
                  <td><%= m.quantity %></td>
                </tr>
              <%end %>
            </tbody>
          </table>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>
<%end %>

  <div class="row">
    <div class="col"></div>
    <div class="col-12 col-xl-auto">
      <%= link_to edit_product_path do%>
        <button class="mb-1 btn btn-primary" type="button">Editar</button>
      <%end %>
    </div>
  </div>