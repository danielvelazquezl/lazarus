<div class="content-heading">Productos
  <div class="btn-group text-align-right">
  <%= link_to new_product_path do%>
    <button class="btn btn-light" title="Crear Producto Terminado">
      <i class="fas fa-laptop"></i>
    </button>
  <%end %>
  <%= link_to new_component_products_path do%>
    <button class="btn btn-light" title="Crear Componente">
      <i class="fas fa-memory"></i>
    </button>
  <%end %>
  </div>

  <div class="ml-auto">
    <%= link_to hidden_products_path do %>
      <button class="btn btn-secondary">
        <i class="fas fa-archive text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>
</div>
<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th style="width:80px;">
      <strong>NOMBRE</strong>
    </th>
    <th>
      <strong>MARCA</strong>
    </th>

    <th>
      <strong>CODIGO DE BARRAS</strong>
    </th>
    <th>
      <strong>PRECIO</strong>
    </th>
    <th style="width:80px;">
      <strong>CATEGORIA</strong>
    </th>
    <th class="text-center">
      <strong>UBICACION</strong>
    </th>
    <th>
      <strong>ESTADO</strong>
    </th>
    <th class="text-center">
      <strong>OPCIONES</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.description %></td>
      <td><%= Brand.find_by(id: product.brand_id).description %></td>
      <td><%= product.bar_code %></td>
      <td><%= product.unit_cost %></td>
      <td><%= ProductCategory.find_by(id: product.product_category_id).description %></td>
      <td><%= product.location %></td>
      <td class="text-center">
        <span class="badge badge-success">Stock</span>
      </td>

      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to product do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <%end%>
          <%= link_to edit_product_path(product) do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <%end %>
          <%= link_to product_path(product, type: :normal), method: :delete, data: { confirm: '¿Estás seguro?' },
                      :remote => true, :class => 'delete_product' do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-trash-alt"></i></button>
          <%end %>
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>
