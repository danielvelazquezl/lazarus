<%= form_with(model: bank, local: true) do |form| %>
  <% if bank.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(bank.errors.count, "error") %> 
      <% if bank.errors.count > 1 %>
        impidieron que este banco sea guardado
      <% else %>
        impidi√≥ que este banco sea guardado:
      <% end %>
      </h2>
      <ul>
      <% bank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
