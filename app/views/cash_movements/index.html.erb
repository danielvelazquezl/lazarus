<div class="content-heading">Movimientos de Caja
</div>
<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
    <tr>
      <th>
        <strong>CLIENTE</strong>
      </th>
      <th>
        <strong>TOTAL</strong>
      </th>
      <th>
        <strong>CAJA</strong>
      </th>
      <th>
        <strong>COMENTARIOS</strong>
      </th>
      <th class="text-center">
        <strong>OPCIONES</strong>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @cash_movements.each do |cash_movement| %>
    <tr>
      <td><%= cash_movement.client.person.name %></td>
      <td><%= cash_movement.total %></td>
      <td><%= cash_movement.cash.description %></td>
      <td><%= cash_movement.comments %></td>

      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to cash_movement do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <%end%>
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>


