<table class="table table-striped table-hover w-100">
  <thead>
  <tr>
    <th  class="text-center">
      <strong>FECHA</strong>
    </th>
    <th  class="text-center">
      <strong>CLIENTE</strong>
    </th>
    <th  class="text-center">
      <strong>TOTAL</strong>
    </th>
    <th  class="text-center">
      <strong>CAJA</strong>
    </th>
    <th  class="text-center">
      <strong>COMENTARIOS</strong>
    </th>
    <th class="text-center">
      <strong>ACCIONES</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% cash_movements.each do |cash_movement| %>
    <tr>
      <td  class="text-center"><%= cash_movement.date.strftime("%d-%m-%Y") %></td>
      <td  class="text-center"><%= cash_movement.client.person.name %></td>
      <td  class="text-center"><%= cash_movement.total %></td>
      <td  class="text-center"><%= cash_movement.cash.description %></td>
      <td  class="text-center"><%= cash_movement.comments %></td>

      <td class="text-center">
        <div class="btn-group" role="group">
          <%= link_to cash_movement do%>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
          <%end%>
        </div>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>

<div class="card card-body bg-gray-lighter">
  <div>
    <%= page_entries_info cash_movements, :model => 'cash_movement', :class => 'align-middle' %>
  </div>
</div>

<%= will_paginate cash_movements, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>