<div class="content-heading">
  <div> Ordenes de Compras</div>
  <div class="ml-auto">
    <%= link_to new_purchase_order_path do %>
      <button class="btn btn-secondary" title="Nueva Orden">
        <i class="fas fa-plus text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover w-100" id="datatable2">
  <thead>
  <tr>
    <th>
      <strong>NÂ° ORDEN</strong>
    </th>
    <th>
      <strong>PROVEEDOR</strong>
    </th>
    <th>
      <strong>RESPONSABLE</strong>
    </th>
    <th>
      <strong>FECHA</strong>
    </th>
    <th>
      <strong>ESTADO</strong>
    </th>
    <th>
      <strong>ACCION</strong>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @purchase_orders.each do |order| %>
    <tr>
      <td><%= order.number %></td>
      <td><%= order.provider.person.name %></td>
      <td><%= order.employee.person.name %></td>
      <td><%= order.date.strftime("%d-%m-%Y")%></td>
      <% if order.state == :invoiced %>
        <td>
          <div class="badge badge-success">
            <%=order.state.text%>
          </div>
        </td>
      <%else %>
          <% if  order.state == :received%>
            <td>
              <div class="badge badge-warning">
                <%=order.state.text%>
              </div>
            </td>
          <%else %>
            <td>
              <div class="badge badge-danger">
                <%=order.state.text%>
              </div>
            </td>
          <%end %>
      <%end %>
      <td>
        <div class="btn-group" role="group">
          <%= link_to edit_purchase_order_path(order) do %>
            <button class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></button>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

