<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row">
        <div class="col col-lg-1">
          <%= link_to :controller=>"welcome" do%>
            <button class="btn btn-light">
              <i class="fas fa-arrow-left text-primary"></i>
            </button>
          <%end %>
        </div>
        <div class="col">
          <h2 class="m-0 font-weight-bold text-primary">Marcas</h2>
        </div>
        <div class="col-md-auto">
          <div class="input-group">
            <input type="text" class="form-control bg-light border-0 small" placeholder="Filtrar.." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
              <button class="btn btn-primary" type="button">
                <i class="fas fa-search fa-sm"></i>
              </button>
            </div>
          </div>
        </div>
        <div class="col col-lg-1">
          <%= link_to new_brand_path do%>
            <button class="btn btn-light">
              <i class="fas fa-plus text-primary fa-2x"></i>
            </button>
          <%end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
          <tr>
            <th>Descripción</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @brands.each do |brand| %>
            <tr>
              <td><%= brand.description %></td>
              <td style="width:15px">
                <%= link_to brand do%>
                  <i class="far fa-eye text-primary"></i>
                <%end %>
              </td>
              <td style="width:15px">
                <%= link_to edit_brand_path(brand) do%>
                  <i class="fas fa-edit text-success"></i>
                <%end %>
              </td>
              <td style="width:15px">
                <%= link_to brand, method: :delete, data: { confirm: '¿Estás seguro?' } do%>
                  <i class="fas fa-trash-alt text-danger"></i>
                <%end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<br>
