<p></p>
<div class="content-heading">
  <div class="text-align-right">
    <%= link_to providers_path do %>
      <button class="btn btn-secondary">
        <i class="fas fa-arrow-left text-primary fa-1x"></i>
      </button>
    <% end %>
  </div>
  <div class="col-8">Detalles del Proveedor</div>
</div>

<div class="card card-default">
  <div class="card-body">
    <p class="lead bb">PROVEEDOR</p>
    <div class="form-group row">
      <div class="col-2">
        <strong>Nombre y Apellido:</strong>
      </div>
      <div class="col-4">
        <%= Person.find_by(id: @provider.person_id).name %>
      </div>
      <div class="col-2">
        <strong>E-mail:</strong>
      </div>
      <div class="col-4">
        <%= Person.find_by(id: @provider.person_id).email %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-2">
        <strong>R.U.C.:</strong>
      </div>
      <div class="col-4">
        <%= @provider.ruc %>
      </div>
      <div class="col-2">
        <strong>Teléfono:</strong>
      </div>
      <div class="col-4">
        <%= Person.find_by(id: @provider.person_id).phone %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-2">
        <strong>Dirección:</strong>
      </div>
      <div class="col-4">
        <%= Person.find_by(id: @provider.person_id).address %>
      </div>
    </div>

  </div>
</div>

<div class="card card-default">
  <div class="card-body">
    <p class="lead bb">CATEGORIAS QUE PROVEE</p>
    <div class="row">
      <div class="col"></div>
      <div class="col-5">
        <table class="table table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th class="col-5">Categorias</th>
          </tr>
          </thead>
          <tbody id="invoices-items-table">
          <% @provider.provider_categories.each do |m| %>
            <tr>
              <td><%= ProductCategory.find_by(id: m.product_category_id).description%></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
      <div class="col"></div>
    </div>
  </div>
  </div>
</div>